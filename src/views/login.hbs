<html lang="en">
  <head>
    <title>Inicio de Sesión</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
  </head>{{> nav_reg_log}}
  <body>
    <div class="container" style="background-color: #FFE798;">
      <div class="container">
        <div class="row mt-5">
          <div class="col-5 mt-2 text-center">
            <label for="brand">Algunos de nuestros clientes.</label>
            <img src="" alt="brand-img" id="brandImg"/>
          </div>
          <div class="col-7 mt-2">
            <div>
              {{#check errors}}
                <div class="alert alert-danger">
                  {{cortarTexto errors}}
                </div>

              {{/check}}

            </div>

            <form method="POST" action="/login">
              <div class="form-group">
                <label for="email">Correo Electrónico:</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="Ingrese el correo"
                  required
                />
              </div>
              <div class="form-group">
                <label for="password">Contraseña:</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Contraseña"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
            </form>

            <hr />
            <div>
              Si no tienes una cuenta.
              <a href="/register">Crea una nueva cuenta</a>.
            </div>
            <br /><br />
          </div>
        </div>
      </div>
    </div>
      <script>
    $(document).ready(function() { let urls = [ '../images/nike_logo.webp',
    '../images/adidas_logo.png', '../images/cuidado_logo.png',
    '../images/underarmour_logo.webp' ]; let currentIndex = 0; function
    changeImage() { $("#brandImg").attr("src", urls[currentIndex]); currentIndex
    = (currentIndex + 1) % urls.length; } changeImage();
    setInterval(changeImage, 3000); });
  </script>
  </body>
</html>