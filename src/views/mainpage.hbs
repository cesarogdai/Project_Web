<script>
    $(document).ready(function () {
        $.get('/getImages', function (data) {
            let imageUrls = data.images.map(image => `/images/brands/${image}`);
            
            let slider = $('.slider');

            let repetitions = 2;

            for (let i = 0; i < repetitions; i++) {
                imageUrls.forEach(url => {
                    let img = $('<img>').attr('src', url).addClass('slider-img');
                    slider.append(img);
                });
            }

            let scrollSpeed = 0.2; // Adjust this value for the desired speed

function scrollImages() {
    let slider = $('.slider');
    let scrollAmount = slider.scrollLeft() + 1;

    if (scrollAmount >= slider.width() / 2) {
        scrollAmount = 0;
    }

    slider.scrollLeft(scrollAmount);
}

setInterval(scrollImages, scrollSpeed);

